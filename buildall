#!/bin/rc

builddir=`{pwd}
pcc -o /$objtype/bin/zrip zrip.c
cd cheapglk
mk install
cd $builddir
cd glulxe
mk install
cd $builddir
cd ztools
mk install
cd $builddir
cd frotz-2.44
mk install
cd $builddir
cd inform
mk install
cd $builddir
cd vbcc
ape/patch -p1 <../newvbcc.patch
mkdir bin
ape/make all
cd $builddir
cp vc.config castles-1.1
bind -ac informlibs castles-1.1
buildlibc
cd $builddir
vbcc/bin/vc -Ilibc/include -Ic '-module-name=permute' -c ../code/permute.c
inform -ew $builddir/code/permutec.inf $builddir/zmachines/permute.r5
