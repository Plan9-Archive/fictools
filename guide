cp ../zlibc.inf libc/zlibc.inf
vbcw -Ilibc/include -Ic '-module-name=permute' -c ../code/permute.c
inform /usr/glenda/vbcc/code/permutec.inf /usr/glenda/vbcc/zmachines/permute.inf
frotz ../zmachines/permute.inf
