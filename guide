cd vbcc
pcc -o /386/bin/zrip zrip.c
buildglulxe
cp glulxe/glulxe /386/bin/glulxe
cd ztools
../9ztools
cd ..
cd frotz-2.44
ape/patch -p1 <../frotz9.patch
mk
cp 8.out /386/bin/frotz
cd ../inform
mk
cp 8.out /386/bin/inform
cd ../vbcc
ape/patch -p1 <../newvbcc.patch
mkdir bin
ape/make all
cp bin/vc /386/bin/vbcw
cd ..
cp vc.config castles-1.1
bind -ac informlibs castles-1.1
cd castles-1.1
../buildlibc
../vbcc/bin/vc -Ilibc/include -Ic '-module-name=permute' -c ../code/permute.c
inform /usr/glenda/fictools/code/permutec.inf /usr/glenda/fictools/zmachines/permute.inf
frotz ../zmachines/permute.inf
