#!/bin/rc

cd cheapglk
pcc -D_POSIX_SOURCE -c *.c
ar r libcheapglk.a cgfref.8 cggestal.8 cgmisc.8 cgstream.8 cgstyle.8 cgwindow.8 cgschan.8 cgdate.8 cgunicod.8 main.8 gi_dispa.8 gi_blorb.8 cgblorb.8
cp libcheapglk.a /386/lib/ape
cd ../glulxe
8a getfcr.s
pcc -I../cheapglk -c *.c
pcc -I../cheapglk -o glulxe main.8 files.8 vm.8 exec.8 funcs.8 operand.8 string.8 glkop.8 heap.8 serial.8 search.8 accel.8 float.8 gestalt.8 osdepend.8 profile.8 unixstrt.8 getfcr.8 -lcheapglk
